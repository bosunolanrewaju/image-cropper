<h1>Crop Avatar</h1>
<%= image_tag @image.avatar.url(:large), id: "cropbox" %>
<h4>Preview</h4>
<div style="width:100px; height:100px; overflow:hidden">
  <%= image_tag @image.avatar.url(:large), :id => "preview" %>
</div>
<%= form_for @image do |f| %>
  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %>
  <% end %>
  <div class="actions">
    <%= f.submit "Crop" %>
  </div>
<% end %>
<%= link_to 'Back', edit_user_path(@image.user) %>
<%= javascript_include_tag 'image', 'data-turbolinks-track': 'reload' %>
