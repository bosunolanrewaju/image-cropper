      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.text_field :name %>
  </p>
  <div id="images">
    <%= form.fields_for :images do |f| %>
      <div>
        <%= render 'image_fields', f: f %>
      </div>
    <% end %>
